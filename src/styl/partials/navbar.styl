.site-navbar
  background #fff
  display flex
  justify-content center
  height 50px // Change
  left 0
  position fixed
  top 0
  width 100%
  z-index 12
  transition height .5s, transform .4s

  // & + main
  //   padding-top 109px // Change
  
  &.active
    height 158px
    transform translateY(85px)
    background #ffffff00
        
    .header-wrapper
      border-top 1px solid #fff
    
    .site-navbar__desktop-logo-container
      transform translate(444px, -122px)
    
    .site-navbar__menu
      //transform translateX(-183px)
      transform translateX(-25px)
    
    .second_menu
      //transform translateX(178px)
      transform translateX(27px)
    
    .site-navbar__divider
      opacity 0
    
    .site-navbar__menu-link
      color #fff
      
    .site-navbar__desktop-logo-top
      display block
    
    .site-navbar__desktop-logo-bottom
      opacity 0
      display none
      
    .site-lang__menu-link
      color #fff

.header-wrapper
  display flex
  max-width 1030px
  justify-content space-between
  width 100%

.site-navbar__menu-trigger,
.site-navbar__mobile-logo-container
  display none

.site-navbar__menu-trigger
  color white // Change

.site-navbar__desktop-logo-container
  display flex
  align-items center
  transition transform .6s
  
  img
    -webkit-transition opacity 0.5s ease-in-out
    -moz-transition opacity 0.5s ease-in-out
    -o-transition opacity 0.5s ease-in-out
    transition opacity 0.5s ease-in-out
  
  .site-navbar__desktop-logo-top
    width 8.9375rem  // Change
    display none
  
  .site-navbar__desktop-logo-bottom
    width 6.9375rem 
    
.site-navbar__menu-container
  flex-grow 1
  text-align right
  height 100%

.site-navbar__menu
  height 100%
  display flex
  justify-content flex-end
  align-items flex-start
  transition .8s transform

.site-navbar__menu-link
  color black // Change
  font-size remify(14) // Change
  padding 18px 8px 8px
  transition .6s background-color linear
  border-radius 1px
  letter-spacing .2px
  

  &:hover
    background-color #2D698F
    color #fff
    
  &.active
    background-color $blueStandar
    color #fff

.second_menu
  height 50px
  display flex
  align-items center
  transition transform .47s

.site-navbar__divider
  width 1px
  background-color $blueStandar
  height 20px
  margin 0 9px
  transition opacity .2s

.lang_menu_wrapper
  display flex
  border 1px solid #fff0
  flex-direction column
  height 20px
  overflow hidden
  transition height .2s, border-color .25s
  
  &.active
    border 1px solid #fff
    height auto
    transform translateY(9px)
    
    .site-lang__menu:hover
      background-color #2D698F

.site-lang__menu
  cursor pointer
  background-color transparent
  transition background-color .1s

.site-lang__menu-link
  color #000
  font-size remify(14)
  padding 0 5px
  -webkit-transition color 0.2s linear
     -moz-transition color 0.2s linear
      -ms-transition color 0.2s linear
       -o-transition color 0.2s linear
          transition color 0.2s linear

.lang-down-arrow
  padding 0 5px 2.5px 0
  

@media screen and (max-width: 876px) // Change
  .site-navbar
    justify-content space-between
    height 56px // Change
    padding 0 18px // Change

  .site-navbar__desktop-logo-container
    img
      height remify(20) // Change
      width auto

  .site-navbar__mobile-logo-container
    display block
    center-block()
    width 70% // Change

    img
      width 100%

  .site-navbar__menu-trigger
    display block
    float right
    font-size 18px // Change

  .site-navbar__menu-container
    background white // Change
    height 100vh
    margin-right 0
    overflow-y auto
    position fixed
    right -280px
    top 0
    transition right 0.2s
    width 280px
    padding-top 25px // Change

  .site-navbar__menu-container--show-menu
    right 0

  .site-navbar__menu
    margin-bottom 30px // Change
    margin-top 30px // Change
    text-align left
    height auto
    flex-wrap wrap

  .site-navbar__menu-link
    display block
    height auto
    display block
    text-align left
    flex-basis 100%