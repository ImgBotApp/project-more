// ========== section_services ========== //
.section_services
  background-color #efefef 
 
.section_services-container
  position relative
  max-width 1030px
  padding-top 4.5rem
  padding-bottom 5rem
  center-block()
  display flex
  justify-content space-around
  flex-direction column

.section_services-title-wrapper
  @extends .section_projects-title-wrapper

.section_services-tabs
  display flex
  margin-bottom 60px

  .section_services-tablink
    position relative
    width 33.33%
    padding 20px 0
    border none
    border-bottom 2px solid $blueStandar
    background-color inherit
    transition 0.3s
    outline none
    cursor pointer
    &:hover
      &:after
        content ''
        width 100%
        height 8px
        background-color $blueStandar
        position absolute
        bottom -8px
        left 0
    .section_services-tablink-title
      color #9d9d9d

.section_services-tablink.open-tab
  p
    color #000 !important
    font-weight bold
    letter-spacing 1px

.section_services-tablink.open-tab::after
  content ''
  width 100%
  height 8px
  background-color $blueStandar
  position absolute
  bottom -8px
  left 0

.section_services-tabcontent-wrapper
  width 100%
  total-center()
  .section_services-tabcontent-img
    width 50%
    height auto
.shopify-wrapper
  display flex
  align-items center
  justify-content flex-start
.section_services-tabcontent
  padding 0 25px 0 30px !important
  width 50%
  height 412px
  background-color $blueStandar
  color #fff 
  display flex
  flex-direction column
  justify-content center
  img
    width 145px
    margin-top 15px
    margin-right 45px

.section_services-tabcontent-title
  font-size remify(30)
  position relative

.section_services-tabcontent-divider
  width 6%
  height 2px
  background-color #fff
  margin-top 15px
  margin-bottom 20px

.section_services-tabcontent-text
  word-spacing 3px
  line-height 1.3

.section_services-btn
