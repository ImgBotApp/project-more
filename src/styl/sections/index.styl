// ========== section_services ========== //
.section_services
  background-color #efefef 
 
.section_services-container
  position relative
  max-width 1030px
  padding-top 11rem
  padding-bottom 11rem
  center-block()
  display flex
  justify-content space-around
  flex-direction column

.section_services-title-wrapper
  @extends .section_projects-title-wrapper

.section_services-tabs
  display flex
  margin-bottom 100px

  .section_services-tablink
    position relative
    width 33.33%
    padding 20px 0
    border none
    border-bottom 2px solid $blueStandar
    background-color inherit
    transition 0.3s
    outline none
    cursor pointer

    &:hover
      background-color #d6d6d6

    .section_services-tablink-title
      color #9d9d9d

.section_services-tablink.open-tab
  p
    color #000 !important
    font-weight bold
    letter-spacing 1px

.section_services-tablink.open-tab::after
  content ''
  width 100%
  height 5px
  background-color $blueStandar
  position absolute
  bottom -7px
  left 0

.section_services-tabcontent-wrapper
  total-center()
  -webkit-animation fade 1s
  -moz-animation fade 1s
  animation fade 1s
  
  .section_services-tabcontent-img
    width 488px
    height 329px

.section_services-tabcontent
  padding 0 25px 0 30px !important
  width 512px
  height 412px
  background-color $blueStandar
  color #fff 
  display flex
  flex-direction column
  justify-content center

  img
    width 70px
    margin-top 15px

.section_services-tabcontent-title
  font-size remify(39)
  position relative

.section_services-tabcontent-divider
  width 6%
  height 2px
  background-color #fff
  margin-top 15px
  margin-bottom 20px

.section_services-tabcontent-text
  word-spacing 3px
  line-height 1.3

.section_services-btn
  background-color $darkBlue
  width 137px
  height 50px
  margin-top 30px
  total-center()

  &:hover
    background-color: #102c3e
    
  p
    color #fff
    font-size remify(15)

-webkit-keyframes fade
    from opacity 0
    to opacity 1

@keyframes fade
    from opacity 0
    to opacity 1


  



//----------------------fin section_services-------------------------

// ========== section_ Form ========== //
.section_form
  background-color $blueStandar
  total-center()
  height 45vh

.section_form-carousel
  center-block()
  width 80vw
  
  .slick-prev
    display none !important

  .slick-right
    right 0 

.section_form-carousel-item
  position relative
  display flex !important
  align-items center
  justify-content center
  margin 0 30px
  transition all 1s

  label
    color $lightBlue
    font-size remify(17)
  
  input
    border none
    appearance none
    box-shadow none
    outline none
    background transparent

.section_form-carousel-item.slick-center
  width 1030px
  transition all 1s
  outline none
  display flex
  justify-content center

  .section_form-input-wrapper
    center-block()
  
  label
    color #fff
    font-size remify(44)
  
  input
    padding 10px
    font-size remify(17)
    color #FFF
    border none
    appearance none
    box-shadow none
    background transparent
    border-bottom 2px solid #fff

  p
    text-align right
    color $lightBlue
    font-size remify(17)


.section_form-carousel-next
    position absolute
    right 85px
    bottom -40px
    width 20px
    cursor pointer

.section_form-btn
  @extends .section_services-btn
  width 100px
  justify-content space-around
  padding 0 15px
  margin-left auto
  margin-top 10vh
  img
    width 1.3rem
    
//----------------------fin section_form-----------------

// ========== section_Work With Us ========== //
.section_workWithUs
  background-image url('../img/backgrounds/work-wUs-bgd.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  height 80vh
  total-center()
  flex-direction column

.site-footer__menu
  margin 40px 0 60px 0

.section_workWithUs_title
  font-size remify(44)
  text-align center
  margin-bottom 5%
  color #fff

.section_workWithUs-btn
  @extends .section_projects-blue-btn

.section_form_mobile
  display none

  



// MOBILE

@media screen and (max-width: 768px)

  .hide-onMobile
    display none

  .section_one-title-wrapper
    margin 0 0 0 25px

  .section_one-title
    font-size 3.5rem
  
  .section_one-description-wrapper
    @extends .section_one-title-wrapper
    margin 0 25px
  
  .section_one-description
    font-size 1.5rem
    margin-top 30px
  
  .section_one-blue-divider
    height 9rem
  
  .section_services-tabcontent-wrapper
    flex-wrap wrap
  
  .section_services-tabcontent
    padding 70px 30px 70px 35px

  .section_services-container
    padding-bottom 0
  
  .section_form_mobile
    display block
    background-color #f0f0f0
    padding 30px

  .section_form_mobile-item
    height 50px
    display flex
    flex-direction row-reverse
    align-items center
    justify-content flex-end

    p
      color #c9c9c9


    input, textarea
      @extends .section_form-carousel-item input
      width 100px
      color #4d4d4d
      margin-left 10px

      &:focus
        outline none
        border-bottom 2px solid $darkBlue
        section_form-mobile_input-focus = true

      &:focus + label
        font-size remify(26)
        color $darkBlue
        font-weight bold
  
  .section_form_mobile-btn
    @extends .section_services-btn
    width 100px
    justify-content space-around
    padding 0 15px
    margin-left auto
    
    img
      width 1.3rem

  .section_projects
    background-image url('../img/backgrounds/projects-bgd-mobile.png')
    background-position 0 14%
    background-size 100% 14%
    background-repeat no-repeat
