*, h1, h2, h3, h4, h5, p
  margin 0
  padding 0
  box-sizing border-box

a 
  text-decoration none 

.section_one
  height 100vh
  background-image url('../img/backgrounds/section_1.jpg')
  background-size cover
  background-position center

.section_one-wrapper
  height 100vh

.section_one-container
  position relative
  max-width 1030px
  height 100vh
  center-block()
  display flex
  justify-content center
  flex-direction column

.section_one-title-wrapper
  display flex
  margin-left 20px

.section_one-title-container
  max-width 522px
  margin-bottom 1.8rem

.section_one-title
  font-size remify(82)
  color #fff
  letter-spacing -1.7px
  line-height 1.14
  margin 0

.blue-text
  color $blueStandar

.section_one-description-wrapper
  display flex
  justify-content flex-end
  margin-right 20px
  margin-top: 1.8rem

.section_one-description-container
  max-width 496px

.section_one-description
  font-size remify(22)
  color #fff
  line-height 1.14
  margin 0

.section_one-blue-divider
  width 1px
  height 6rem
  background-color $blueStandar
  center-block()
  position absolute
  bottom 0
  align-self center

.section_one-blue-box
  width 100%
  height 152px
  background-color $blueStandar
  bottom calc(-152px / 2)
  position absolute
  display flex
  flex-direction column
  justify-content flex-start
  align-items center

.section_one-white-divider-blue-box
  height calc(50% - 31px)
  width 1px
  background-color #fff

.section_one-cicle-circle
  width 51px
  height 51px
  border-radius 50%
  background-color #2c7094
  total-center()

.section_one-cicle-arrow
  width 31px
  height 31px
  border-radius 50%
  background-color #fff
  total-center()
  -webkit-box-shadow: 0px 10px 18px -8px rgba(0,0,0,1);
  -moz-box-shadow: 0px 10px 18px -8px rgba(0,0,0,1);
  box-shadow: 0px 10px 18px -8px rgba(0,0,0,1);
