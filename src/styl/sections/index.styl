*, h1, h2, h3, h4, h5, p
  margin 0
  padding 0
  box-sizing border-box

a 
  text-decoration none 
label.error
  font-family 'Metropolis'
  font-weight $normal
  
.slick-slide, .slick-current, .slick-active
  &:focus
    outline none !important

// overwriting the log success color and typo.

.alertify-logs
  & > .show
    font-family "Metropolis"
    border-radius 2px

  & > .success
    background: #408ab7

  & > .error
    background: #3780AB

.section_one
  height 100vh
  background-image url('../img/backgrounds/section_1.jpg')
  background-size cover
  background-position center
.br-show-m
  display none
.section_one-wrapper
  height 100vh
  max-width 1065px
  center-block()
  position relative

.section_one-container
  position relative
  width 100%
  height 100vh
  center-block()
  display flex
  justify-content flex-end
  flex-direction column

.section_one-text-wrapper
  position absolute
  width 100%
  height 300px
  display flex
  flex-flow column wrap
  top 50%
  left 50%
  transform translate(-50%, -50%)
.section_one-title-wrapper
  display flex
  // margin-left 20px

.section_one-title-container
  // max-width 522px
  width 50%
  position absolute
  top 0
  left 50%
  transform translateX(-26rem)

.section_one-title
  font-size remify(70)
  color #fff
  letter-spacing -1.7px
  line-height 1.14
  margin 0

.blue-text
  color $blueStandar

.section_one-description-wrapper
  display flex
  justify-content flex-end
  margin-right 20px
  margin-top 1.8rem

.section_one-description-container
  // max-width 496px
  width 50%
  position absolute
  bottom 0
  left 50%

.section_one-description
  font-size remify(21)
  color #fff
  line-height 1.35
  text-align left
  margin 0

.section_one-blue-divider
  width 1px
  height 7rem
  background-color $blueStandar
  position absolute
  bottom 0
  left 50%
  transform translateX(-50%)

.section_one-blue-box
  width 100%
  height 152px
  background-color $blueStandar
  bottom calc(-152px / 2)
  position absolute
  left 50%
  transform translateX(-50%)!important
  

.section_one-white-divider-blue-box
  height calc(50% - 31px)
  width 1px
  background-color #fff
  position absolute
  left 50%
  transform translateX(-50%) !important

.section_one-cicle-circle
  width 51px
  height 51px
  border-radius 50%
  background-color #2c7094
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -65%)
  total-center()

.section_one-cicle-arrow
  width 31px
  height 31px
  border-radius 50%
  background-color #fff
  total-center()
  -webkit-box-shadow 0px 10px 18px -8px rgba(0,0,0,1)
  -moz-box-shadow 0px 10px 18px -8px rgba(0,0,0,1)
  box-shadow 0px 10px 18px -8px rgba(0,0,0,1)
  img
    width 40%  
