// ========== section_ Form ========== //
.section-form-title
  color #fff
  font-size remify(44)
  text-align center
  cursor pointer

.section_form .slick-list
  padding-bottom 13px !important 

label.error
  font-size .8em !important

.section_form
  background-color $blueStandar
  position relative
  total-center()
  height 45vh
  width 100%

.section_form-carousel
  center-block()
  width 100%
  
  .slick-prev
    display none !important

  .slick-right
    right 0 
.section_form-carousel-item:first-child
  justify-content center
.section_form-carousel-item
  height 7rem !important
  position relative
  outline none
  display flex !important
  align-items center
  justify-content space-between
  margin 0 100px

  .section_form-input-wrapper
    center-block()
    cursor pointer
  label
    color #fff
    font-size remify(44)
  label.error
    color #ff3636
  
  input
    padding 10px
    font-size remify(17)
    color #FFF
    appearance none
    border none
    border-radius 0px
    box-shadow none
    outline none
    background transparent
    border-bottom 2px solid #fff
  p
    color $lightBlue
    font-size remify(17)

.carousel-arrow
  position absolute
  bottom 0
  width 20px
  cursor pointer

.section_form-carousel-next
  right 0

.section_form-carousel-prev
  left 0
  transform rotate(180deg)

.carousel-arrow.last-prev
  bottom 0 

.section_form-btn
  @extends .section_services-btn
  width 115px
  border none
  justify-content space-around
  padding 0 15px
  margin-left auto
  margin-top 10vh
  cursor pointer
  img
    width 1rem
  p
    color #fff
    font-size 18px
//----------------------fin section_form-----------------

