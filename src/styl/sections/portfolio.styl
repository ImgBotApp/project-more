.turnOff-on-mobile
  display block
.turnOn-on-mobile
  display none
.portfolio-view
  padding 155px 0
  background-image url(../img/backgrounds/projects-bgd.png)
  background-size 100% 10%
  background-position-y 70px  
  background-repeat no-repeat
.portfolio-logo-transform 
  transition all 0.2s ease-in

.portfolio-logo-transformhover 
  transition all 0.2s ease-in
  transform scale(1.2)

.portfolio-view__background 
  width 100%
  total-center()
  flex-direction column

.portfolio-view__background-title 
  total-center()
  flex-direction column
  p 
    color #3b84af
    font-size remify(44px)
  span 
    color #131b21
    font-size remify(20px)
    width 33.75em
    line-height 1.35
    text-align center
    margin 41px 0 88px

.portfolio-view__container 
  display flex
  justify-content center
  flex-wrap wrap
  max-width 1030px
  margin 15px auto 

  img
    transition all .2s ease-in
  
  img:hover
    transition all .2s ease-in
    transform scale(1.2)

.col-1, .col-2, .col-3
  width 33.33%
  padding 0 6px

.card-lg,.card-md, .card-sm
  width 100%
  margin-bottom 12px
  total-center()
  background-repeat no-repeat
  background-position top center
  background-size cover

