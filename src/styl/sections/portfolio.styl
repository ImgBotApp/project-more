//////////////// Mobile small devices ////////////////////

 @media screen and (max-width: 39.9375em) {
   
  .card-bottom-margin {
    margin: 0 0 7px 0;
  }    
  // Card size
  .card-lg {
    width: 49%;
    height: 18.31em;
  }

  .card-md {  
    width: 49%;
    height: 18.31em;
  }

  .card-sm {
    width: 49%;
    height: 18.31em;  
  }

  // Title
  .portfolio-view__background {
    background-size: contain;
    height: 15.5em;
    margin: 78px 0 0;
  }
  .portfolio-view__background-title {
    align-items: flex-start;
    justify-content: flex-start;
    width: 100%;
    padding: 0 0 0 2.06em ;
      span {
        width: 16.43em;
        text-align: left;
        margin: 32px 0 0;
      }
  }

  // Portfolio 
  .portfolio-view__container {
    margin: 50px 0 30px;
  }
  // Columns size
  .col-1, .col-2, .col-3 {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  // More Logo
  .portfolio-view__more-log {
    margin: 68px 0 81px 0;
  }
}

//////////////// Mobile medium devices ////////////////////

@media screen and (min-width: 40em) and (max-width: 63.9375em) {  
  // Card size
  .card-lg {
    width: 125%;
    height: 16.5em;
  }

  .card-md {  
    width: 125%;
    height: 16.5em;
  }

  .card-sm {
    width: 125%;
    height: 14.68em;  
  }

  .portfolio-view__container {
    display: flex;
    justify-content: space-between;
    max-width: 520px;
    margin: 0 auto 30px auto;
  }  
}