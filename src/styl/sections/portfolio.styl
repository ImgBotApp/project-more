//////// Title ///////
.portfolio-view__background {
  background-image: url(../img/backgrounds/projects-bgd.svg);
  background-size: cover;
  background-repeat: no-repeat;
  width: 100%;
  height: 27.5em;
  margin: 82px 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
}

.portfolio-view__background-title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
    p {
      color: #3b84af;
      font-size: remify(44px);
    }
    span {
      color: #131b21;
      font-size: remify(20px);
      width: 33.75em;
      line-height: 1.35;
      text-align: center;
      margin: 41px 0 0;
    }  
}

///////// Portfolio Container ////////

.portfolio-view__container {
  display: flex;
  justify-content: space-between;
  center-block();
  max-width: 1010px;
  flex-wrap: wrap;
  margin-bottom: 30px;
}

