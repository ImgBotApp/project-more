//////////////// Mobile medium devices ////////////////////
@media screen and (min-width 40.063em) and (max-width 64em)   
  .card-lg 
    height 16.5em

  .card-md   
    height 16.5em

  .card-sm 
    height 14.68em  
  
  .portfolio-view__background 
    margin 50px 0 0

  .portfolio-view__background-title 
    span 
      margin 41px 0 55px

  .portfolio-view__container 
    display flex
    justify-content center
    margin 0 auto 30px auto

//////////////// Mobile small devices ////////////////////
@media screen and (max-width 40em)
