{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}

{% block title %}
Careers
{% endblock %}

{% block content %}

<section class="careers-view">
  <div class="careers_view-wrapper">
    <h1 class="careers-view__title font-metropolis-bold">Why work at More?</h1>
    <div class="careers-view__carousel-wrapper">
      <div class="careers-view__carousel-item itemA">
        <div class="careers-view__carousel-bullet-point">
          <div class="careers-view__carousel-hyphen"></div>
          <p class="careers-view__carousel-letter font-athelas-bold">A</p>
        </div>
        <h2 class="careers-view__carousel-item-heading font-metropolis-bold">Only A players</h2>
        <p class="careers-view__carousel-item-description font-athelas-bold">People who believe they can always achieve more</p>
      </div>
      <div class="careers-view__carousel-item itemB">
        <div class="careers-view__carousel-bullet-point">
          <div class="careers-view__carousel-hyphen"></div>
          <p class="careers-view__carousel-letter font-athelas-bold">B</p>
        </div>
        <h2 class="careers-view__carousel-item-heading font-metropolis-bold">We are a family</h2>
        <p class="careers-view__carousel-item-description font-athelas-bold">We always take care of each other. If you grow, we grow.</p>
      </div>
      <div class="careers-view__carousel-item itemC">
        <div class="careers-view__carousel-bullet-point">
          <div class="careers-view__carousel-hyphen"></div>
          <p class="careers-view__carousel-letter font-athelas-bold">C</p>
        </div>
        <h2 class="careers-view__carousel-item-heading font-metropolis-bold">Enjoy your Mondays!</h2>
        <p class="careers-view__carousel-item-description font-athelas-bold">Lorem ipsum dolor, sit amet consectetur adipisicing.</p>
      </div>
      <div class="careers-view__carousel-item itemD">
        <div class="careers-view__carousel-bullet-point">
          <div class="careers-view__carousel-hyphen"></div>
          <p class="careers-view__carousel-letter font-athelas-bold">D</p>
        </div>
        <h2 class="careers-view__carousel-item-heading font-metropolis-bold">Keep growing with us</h2>
        <p class="careers-view__carousel-item-description font-athelas-bold">Continuous learning is our motto</p>
      </div>
      <div class="careers-view__carousel-item itemE">
        <div class="careers-view__carousel-bullet-point">
          <div class="careers-view__carousel-hyphen"></div>
          <p class="careers-view__carousel-letter font-athelas-bold">E</p>
        </div>
        <h2 class="careers-view__carousel-item-heading font-metropolis-bold">There are no bosses, only leaders</h2>
        <p class="careers-view__carousel-item-description font-athelas-bold">We all need a guide to keep getting better.</p>
      </div>
     </div>{# Fin de carrusel #}
    <div class="career-view_apply-now-section">
      <p class="careers-view_apply-now-title font-metropolis-bold">Apply now</p>
      <div class="careers-view__main-form">
        <div class="careers-view__main-form__col1">
          <form action="">
            <div class="careers-view__main-form-group">
              <input type="text" name="nameCareers" id="nameCareers">
              <label for="nameCareers" class="font-metropolis-medium">Full name</label>
            </div>
            <div class="careers-view__main-form-group">
              <input type="email" name="emailCareers" id="emailCareers">
              <label for="emailCareers" class="font-metropolis-medium">E-mail</label>
            </div>
            <div class="careers-view__main-form-group">
              <input type="tel" name="phoneCareers" id="phoneCareers">
              <label for="phoneCareers" class="font-metropolis-medium">Phone number</label>
            </div>
            <div class="careers-view__main-form-group">
              <select type="text" name="openingCareers" id="openingCareers">
                <option value="Selec an openning">Selec an openning</option>
                <option value="UI Designer">UI Designer</option>
                <option value="UX Designer">UX Designer</option>
                <option value="Tech Lead">Tech Lead</option>
                <option value="Tech Lead">Tech Lead</option>
                <option value="Front-End Developer">Front-End Developer</option>
                <option value="Back-End Developer">Back-End Developer</option>
                <option value="Growth Hacker">Growth Hacker</option>
                <option value="Project Manager">Project Manager</option>
                <option value="Sales">Sales</option>
                <option value="Graphic Designer">Graphic Designer</option>
                <option value="Finance and Administration">Finance and Administration</option>
                <option value="Human resources">Human resources</option>
              </select>
            </div>
            <div class="careers-view__main-form-group">
              <input type="text" name="linkedinCareers" id="linkedinCareers">
              <label for="linkedinCareers" class="font-metropolis-medium">Linkedin profile</label>
            </div>
            <span class="careers-view__main-form-send__button">
              <img src="img/icons/np-right-arrow.png">
              <p class="font-metropolis-medium">Send</p>
            </span>
          </form>
        </div>
        <div class="cv-form__box2">
          <img src="img/work@more2.jpg" alt="">
        </div>
      </div>
    </div>
    <div class="careers-view__optional-form">
      <p class="careers-view__optional-form-title font-metropolis-bold">Go the extra mile <span class="font-athelas-bold">(Optionals)</span></p>
      <form action="">
        <div class="careers-view__optional-form-group">
          <input type="text" name="portfolioCareers" id="portfolioCareers">
          <label for="portfolioCareers" class="font-metropolis-medium">Behance Portfolio</label>
        </div>
        <div class="careers-view__optional-form-group">
          <input type="text" name="githubCareers" id="githubCareers">
          <label for="githubCareers" class="font-metropolis-medium">GitHub Username</label>
        </div>
        <div class="careers-view__optional-form-group">
          <input type="text" name="urlCareers" id="urlCareers">
          <label for="urlCareers" class="font-metropolis-medium">Portolio URL</label>
        </div>
        <div class="careers-view__optional-form-group">
          <textarea cols="24" rows="1" type="text" name="whyMoreCareers" id="whyMoreCareers"></textarea>
          <label for="whyMoreCareers" class="font-metropolis-medium">Why would you like to work with us?</label>
        </div>
        <span class="careers-view__optional-form-send__button">
          <img src="img/icons/np-right-arrow.png">
          <p class="font-metropolis-medium">Send</p>
        </span>
      </form>
    </div>
  </div>{# Fin de section wrapper #}
</section>





