{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}

{% block title %}
Contact
{% endblock %}

{% block content %}
<section class="contact-view contact-view__background">
  {# Title #}
  <div class="contacto-view__title">
    <p class="font-metropolis-bold">Contáctanos</p>
  </div>
  <div class="contacto-view__more-logo">
    <img src="img/logos/more-black-mobile.png" alt="more logo">
  </div>
  <div class="contacto-view__form"> {# Form container #}
    <div class="contacto-view__form-box1 font-metropolis-medium"> {# Name, E-mail, Message #}
      <form name="form-contact-more_contact">
        <div class="contacto-view__form-group">
          <input type="text" id="name" class="font-metropolis-regular" name="name" required autocomplete="off">
          <label for="name" class="font-metropolis-medium">Nombre</label>
        </div>
        <div class="contacto-view__form-group">
          <input type="email" id="e-mail" class="font-metropolis-regular" name="email" required autocomplete="off">
          <label for="e-mail" class="font-metropolis-medium">Correo electrónico</label>
        </div>
        <div class="contacto-view__form-group">
          <textarea name="message" id="message" cols="47" rows="10" placeholder="Escribe aquí…" class="font-metropolis-regular" required></textarea>
          <label for="message" class="font-metropolis-medium">Mensaje</label>
        </div>
        <button type="submit" class="font-metropolis-medium contact-form__button"><span>Enviar</span></button>
      </form>
    </div>
    <div class="contacto-view__form-box2"> {# Gray box #}
      <div class="contacto-view__form-box2-container">
        <div class="cw-mail">
          <img src="img/icons/np-mail.svg" alt="mail" width="13" height="9">
          <span class="font-metropolis-bold">Escríbenos</span>
        </div>
        <a href="mailto:hola@getmore.mx"><span class="font-metropolis-regular">hola@getmore.mx</span></a>
        <div class="cw-map">
          <img src="img/icons/np-map.svg" alt="map" width="13" height="17">
          <span class="font-metropolis-bold">Ven y conócenos</span>
        </div>
        <a href="https://www.google.com.mx/maps/place/Workinglab.com.mx/@19.4214937,-99.1736051,17z/data=!3m1!4b1!4m5!3m4!1s0x85d1ff48ec31aa0d:0xf0bb4613c67e35b1!8m2!3d19.4214887!4d-99.1714218" target="_blanck"><span class="font-metropolis-regular">Av. Chapultepec 480 <br> Col. Roma Norte, CDMX</span></a>
      </div>  
    </div>
  </div>
</section>
{% endblock %}