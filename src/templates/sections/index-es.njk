  <form name="form-contact-more_desktop" id="form-contact-more_desktop">
    <div class="section_form hide-onMobile">
      <div class="section_form-carousel">
        <div class="section_form-carousel-item">
          <h1 class="section-form-title font-metropolis-bold">¡Contáctanos!</h1>
        </div>
        <div class="section_form-carousel-item">
          <div class="section_form-input-wrapper">
            <label for="inputName" class="font-metropolis-bold">Nombre completo</label>
            <input id="inputName" class="font-metropolis-light" type="text" name="name" minlength="2" required autocomplete="off">
          </div>
          <p class="font-metropolis-bold">Correo eletrónico</p>
          <img class="section_form-carousel-next carousel-arrow" src="img/icons/np-right-arrow.png" alt="next arrow">
        </div>
        <div class="section_form-carousel-item">
          <img class="section_form-carousel-prev carousel-arrow" src="img/icons/np-right-arrow.png" alt="next arrow">
          <p id="nameText" class="font-metropolis-bold section_form-fild-nameInput"></p>
          <div class="section_form-input-wrapper">
            <label for="inputEmail" class="font-metropolis-bold">Correo electrónico</label>
            <input id="inputEmail" class="font-metropolis-light" type="email" name="email" required autocomplete="off">
          </div>
          <p class="font-metropolis-bold">Mensaje</p>
          <img class="section_form-carousel-next carousel-arrow" src="img/icons/np-right-arrow.png" alt="next arrow">
        </div>
        <div class="section_form-carousel-item">
          <img class="section_form-carousel-prev carousel-arrow last-prev" src="img/icons/np-right-arrow.png" alt="next arrow">
          <p id="emailText"  class="font-metropolis-bold section_form-fild-emailInput"></p>
          <div class="section_form-input-wrapper">
            <label for="inputMessage" class="font-metropolis-bold">Mensaje</label>
            <input id="inputMessage" class="font-metropolis-light" type="text" name="message" required autocomplete="off">
          </div>
          <button type="submit" class="section_form-btn">
            <img src="img/icons/np-right-arrow.png" alt="Send Arrow">
            <p class="font-metropolis-medium">Enviar</p>
          </button>
        </div>
      </div>
    </form>
    {# FORM ON MOBILE#}
  </div>
  <div class="section_form_mobile">
    <form name="form-contact-more_mobile">
      <div class="section_form_mobile-item">
        <input id="nameInputMobile"  class="font-metropolis-light" type="text" name="name" autocomplete="off" regex="[a-zA-Z]{2,1}" required>
        <label for="nameInputMobile" class="font-metropolis-bold">Nombre completo</label>
      </div>
      <div class="section_form_mobile-item">
        <input id="emailInputMobile" class="font-metropolis-light" type="email" name="email" required autocomplete="off">
        <label for="emailInputMobile" class="font-metropolis-bold">Correo eletrónico</label>
      </div>
      <div class="section_form_mobile-item">
        <textarea id="messageInputMobile" cols="30" rows="2" class="font-metropolis-light" type="text" name="message" required></textarea> 
        <label for="messageInputMobile" class="font-metropolis-bold">Mensaje</label>
      </div>
      <button type="submit" class="section_form_mobile-btn">
        <img src="img/icons/np-right-arrow.png" alt="Send Arrow">
        <p class="font-metropolis-medium">Enviar</p>
      </button>
    </form>
  </div>
  <div class="section_workWithUs">
    <p class="section_workWithUs_title font-metropolis-bold">¿Te gustaría trabajar <br class="hide-onMobile"> con nosotros?</p>
    <a href="careers-es.html#applyNow">
      <div class="section_workWithUs-btn">
        <p class="font-metropolis-medium">Aplicar</p>
      </div>
    </a>
  </div>
{% endblock %}